<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="140dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#EFEFEF"
    app:cardCornerRadius="35dp"
    app:cardElevation="4dp"
    android:layout_marginStart="10dp"
    android:paddingStart="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/tv_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project"
            android:textSize="15sp"
            android:textColor="#828282"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/poppinsregular"
            />

        <TextView
            android:id="@+id/tv_about_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reading Books"
            app:layout_constraintTop_toBottomOf="@id/tv_project_title"
           app:layout_constraintLeft_toLeftOf="@id/tv_project_title"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinssemibold"/>

   <ImageView
       android:id="@+id/circle_img"
       android:layout_width="10dp"
       android:layout_height="10dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginLeft="11dp"
       android:layout_marginBottom="11dp"
       android:src="@drawable/circle"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_25th_october_2020"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@id/circle_img"
            app:layout_constraintLeft_toRightOf="@id/circle_img"
            app:layout_constraintTop_toTopOf="@+id/circle_img" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>